                    }
                ]
            },
            "gridPos": {
                "h": 25,
                "w": 24,
                "x": 0,
                "y": 0
            },
            "hideTimeOverride": false,
            "id": 73,
            "links": [],
            "maxDataPoints": 800,
            "options": {
                "footer": {
                    "fields": "",
                    "reducer": [
                        "sum"
                    ],
                    "show": false
                },
                "showHeader": true,
                "sortBy": [
                    {
                        "desc": false,
                        "displayName": "Namespace"
                    }
                ]
            },
            "pluginVersion": "9.0.5",
            "repeatDirection": "v",
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "${DS_THANOS}"
                    },
                    "exemplar": false,
                    "expr": "# CPU Requested\navg_over_time(namespace_cpu:kube_pod_container_resource_requests:sum{cluster=\"$cluster\"}[$__range:$__interval])\nor sum by (cluster, namespace, prometheus, prometheus_replica) (kube_namespace_labels{cluster=\"$cluster\"} * 0)",
                    "format": "table",
                    "hide": false,
                    "instant": true,
                    "interval": "",
                    "intervalFactor": 1,
                    "legendFormat": "{{ namespace }}",
                    "refId": "cpu_requested"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "${DS_THANOS}"
                    },
                    "exemplar": true,
                    "expr": "# RAM Requested\navg_over_time(namespace_memory:kube_pod_container_resource_requests:sum{cluster=\"$cluster\"}[$__range:$__interval]) / (1024 * 1024 * 1024)\nor sum by (cluster, namespace, prometheus, prometheus_replica) (kube_namespace_labels{cluster=\"$cluster\"} * 0)",
                    "format": "table",
                    "hide": false,
                    "instant": true,
                    "interval": "",
                    "intervalFactor": 1,
                    "legendFormat": "{{ namespace }}",
                    "refId": "memory_requested"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "${DS_THANOS}"
                    },
                    "exemplar": true,
                    "expr": "# Storage Requested\navg_over_time(\n  namespace_persistentvolumeclaim:kube_persistentvolumeclaim_resource_requests_storage_bytes:sum{cluster=\"$cluster\"}[$__range:$__interval]\n) / 1024 / 1024 / 1024\nor sum by (cluster, namespace, prometheus, prometheus_replica) (kube_namespace_labels{cluster=\"$cluster\"} * 0) # Allow to list even namespaces without PVC\n",
                    "format": "table",
                    "hide": false,
                    "instant": true,
                    "interval": "",
                    "intervalFactor": 1,
                    "legendFormat": "",
                    "refId": "storage_requested"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "${DS_THANOS}"
                    },
                    "exemplar": true,
                    "expr": "# CPU Usage (including past and disappeared Pods) / cpu requested (including past and disappeared Pods)\navg_over_time (namespace:container_cpu_usage_seconds_total:sum_rate{cluster=\"$cluster\"}[$__range])\n/ on (namespace)\n(avg_over_time(namespace:kube_pod_container_resource_requests_cpu_cores:sum{cluster=\"$cluster\"}[$__range:$__interval]))\n* 100",
                    "format": "table",
                    "hide": true,
                    "instant": true,
                    "interval": "",
                    "intervalFactor": 1,
                    "legendFormat": "{{ namespace }}",
                    "refId": "H"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "${DS_THANOS}"
                    },
                    "expr": "# RAM usage (including past and disappeared Pods) / RAM requested (including past and disappeared Pods)\navg_over_time (namespace:container_memory_usage_bytes:sum{cluster=\"$cluster\"}[$__range])\n/ on (namespace)\n(avg_over_time(namespace:kube_pod_container_resource_requests_memory_bytes:sum{cluster=\"$cluster\"}[$__range:$__interval]))\n* 100",
                    "format": "table",
                    "hide": true,
                    "instant": true,
                    "interval": "",
                    "intervalFactor": 1,
                    "legendFormat": "{{ namespace }}",
                    "refId": "I"
                }
            ],
            "timeFrom": "",
            "title": "Namespace cost and utilisation analysis over the period",
            "transformations": [
                {
                    "id": "merge",
                    "options": {
                        "reducers": []
                    }
                },
                {
                    "id": "calculateField",
                    "options": {
                        "alias": "CPU Cost",
                        "binary": {
                            "left": "Value #cpu_requested",
                            "operator": "*",
                            "reducer": "sum",
                            "right": "6"
                        },
                        "mode": "binary",
                        "reduce": {
                            "reducer": "sum"
                        },
                        "replaceFields": false
                    }
                },
                {
                    "id": "calculateField",
                    "options": {
                        "alias": "Memory Cost",
                        "binary": {
                            "left": "Value #memory_requested",
                            "operator": "*",
                            "reducer": "sum",
                            "right": "2.2"
                        },
                        "mode": "binary",
                        "reduce": {
                            "reducer": "sum"
                        }
                    }
                },
                {
                    "id": "calculateField",
                    "options": {
                        "alias": "Storage Cost",
                        "binary": {
                            "left": "Value #storage_requested",
                            "operator": "*",
                            "reducer": "sum",
                            "right": "0.104"
                        },
                        "mode": "binary",
                        "reduce": {
                            "reducer": "sum"
                        }
                    }
                },
                {
                    "id": "calculateField",
                    "options": {
                        "binary": {
                            "left": "CPU Cost",
                            "operator": "+",
                            "reducer": "sum",
                            "right": "Memory Cost"
                        },
                        "mode": "binary",
                        "reduce": {
                            "reducer": "sum"
                        }
                    }
                },
                {
                    "id": "calculateField",
                    "options": {
                        "alias": "Total Cost",
                        "binary": {
                            "left": "CPU Cost + Memory Cost",
                            "operator": "+",
                            "reducer": "sum",
                            "right": "Storage Cost"
                        },
                        "mode": "binary",
                        "reduce": {
                            "reducer": "sum"
                        }
                    }
                },
                {
                    "id": "organize",
                    "options": {
                        "excludeByName": {
                            "CPU Cost + Memory Cost": true,
                            "Time": true,
                            "cluster": true,
                            "prometheus": true,
                            "prometheus_replica": true
                        },
                        "indexByName": {
                            "CPU Cost": 9,
                            "CPU Cost + Memory Cost": 12,
                            "Memory Cost": 10,
                            "Storage Cost": 11,
                            "Time": 0,
                            "Total Cost": 3,
                            "Value #cpu_requested": 6,
                            "Value #memory_requested": 7,
                            "Value #storage_requested": 8,
                            "cluster": 1,
                            "namespace": 2,
                            "prometheus": 4,
                            "prometheus_replica": 5
                        },
                        "renameByName": {
                            "cluster": ""
                        }
                    }
                },
                {
                    "id": "filterByValue",
                    "options": {
                        "filters": [
                            {
                                "config": {
                                    "id": "lower",
                                    "options": {
                                        "value": 5
                                    }
                                },
                                "fieldName": "Total Cost"
                            }
                        ],
                        "match": "any",
                        "type": "exclude"
                    }
                }
            ],
            "type": "table"
        }
    ],
